<h1>All our lovely Kittens</h1>

<% @kittens.each do |kitten|%>
    <div class="kitten_container">
        <p class="name">Name: <%= kitten.name %></p>
        <p class="age">Age: <%= kitten.age %></p>

        <%= button_to 'Delete Kitten', kitten, 
            method: :delete, 
            data: { confirm: 'Are you sure?' }, 
            class: 'btn btn-danger' %>
    </div>
<% end %>